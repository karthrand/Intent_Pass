<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:gravity="center"
	android:paddingTop="15dp">

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="horizontal"
		android:id="@+id/mainLinearLayout1">
        <!-- 步骤一：
        新增2个提示用的TextView和2个输入数据用的EditText
        EditText需要添加id
        新增两个TextView，1个用于提示，一个用于接收返回信息
        -->
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="输入姓名："/>

		<EditText
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:ems="10"
			android:id="@+id/mainEditText1"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="horizontal"
		android:layout_below="@id/mainLinearLayout1"
		android:id="@+id/mainLinearLayout2">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="测试数字："/>

		<EditText
			android:inputType="number"
			android:layout_width="wrap_content"
			android:ems="10"
			android:layout_height="wrap_content"
			android:id="@+id/mainEditText2"/>

	</LinearLayout>

	<Button
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="跳转"
		android:layout_below="@id/mainLinearLayout2"
		android:layout_centerInParent="false"
		android:id="@+id/mainButton1"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="返回内容："
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_below="@id/mainButton1"
		android:id="@+id/mainTextView1"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="等待返回"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_toRightOf="@id/mainTextView1"
		android:layout_below="@id/mainButton1"
		android:id="@+id/mainTextView2"/>

</RelativeLayout>

